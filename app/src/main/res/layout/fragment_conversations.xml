<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/ivProfilePicture"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@android:color/white"
            style="@android:style/TextAppearance.Medium"
            android:background="@drawable/rounded_corner_textview"
            tools:text="Label"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/tvPrice"
            android:layout_alignStart="@+id/tvPrice"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            style="@android:style/TextAppearance.Medium"
            android:gravity="center"
            tools:text="Task Title"
            android:layout_below="@+id/tvType"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Large"
            android:textStyle="bold"
            android:textColor="#2BA11A"
            tools:text="$100"
            android:layout_alignBottom="@+id/ivProfilePicture"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvConversations"
        android:layout_below="@+id/relativeLayout"/>

</RelativeLayout>