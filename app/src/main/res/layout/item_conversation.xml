<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ivProfileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:src="@drawable/ic_person_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        tools:text="T. Chu"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="5dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:id="@+id/rbRating"
        android:isIndicator="true"
        style='@style/styleRatingBar'
        android:stepSize="0.5"
        android:numStars="5"
        android:layout_below="@+id/tvName"
        android:layout_alignLeft="@+id/tvName"
        android:layout_alignStart="@+id/tvName"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$2500.50"
        android:id="@+id/tvOffer"
        style="@style/textMoney"
        android:layout_below="@+id/rbRating"
        android:layout_alignLeft="@+id/rbRating"
        android:layout_alignStart="@+id/rbRating"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"/>

    <Button
        style="@style/smallYellowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message"
        android:id="@+id/btnMessage"
        android:layout_alignRight="@+id/ivNewMessage"
        android:layout_alignEnd="@+id/ivNewMessage"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/ivNewMessage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"/>


</RelativeLayout>